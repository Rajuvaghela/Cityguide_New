<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/global_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="misterro.bitnet.com.jaymetals.Activity.OTPConfirm"
    tools:showIn="@layout/activity_otpconfirm">

    <LinearLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:id="@+id/image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/jay_metals" />

    </LinearLayout>




    <RelativeLayout
        android:layout_below="@+id/image"
        android:id="@+id/linear_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">


        <Button
            android:id="@+id/ib_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@mipmap/cancel"
            android:layout_alignParentRight="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/ll_confirm"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_170sdp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@color/white"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="9426496667 - India"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/txt_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="Please verify your mobile number and click on OK"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/mybuttons"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>
