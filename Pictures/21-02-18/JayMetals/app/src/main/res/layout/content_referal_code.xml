<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/global_bg"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="misterro.bitnet.com.jaymetals.Activity.ReferalCode"
    tools:showIn="@layout/activity_referal_code">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@mipmap/jay_metals" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_25sdp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_referalcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edt_box"
            android:gravity="center"
            android:hint="Enter Referal Code"
            android:maxLines="1"
            android:textColorHint="@color/blue" />

        <Button
            android:id="@+id/btn_referal_code"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/blue"
            android:text="Next"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/blue"
            android:text="Skip"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>
