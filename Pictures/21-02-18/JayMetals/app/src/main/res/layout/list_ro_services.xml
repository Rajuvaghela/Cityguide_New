<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160sp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="5sp"
    android:layout_marginTop="5sp"
    android:background="@drawable/product_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_ro_services"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginBottom="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/no_photo" />

    </RelativeLayout>


    <TextView
        android:id="@+id/ro_service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="Product Details"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp" />

    <LinearLayout
        android:id="@+id/ll_ro_service_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ro_service_name"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Starting From"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/ro_service_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/featured_product_amount"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_ro_service_amount">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_20sdp"

            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:src="@drawable/rating_bg" />

        <LinearLayout

            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/ro_service_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_7sdp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_6sdp"
                android:text="3.5"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <LinearLayout
                android:id="@+id/rating_indication_ro_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


